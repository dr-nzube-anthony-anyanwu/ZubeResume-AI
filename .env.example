# AI Provider Configuration
# Choose your preferred provider: openai, groq, or huggingface
DEFAULT_AI_PROVIDER=groq

# Groq API Configuration (FREE!)
GROQ_API_KEY=your_groq_api_key_here

# Groq API Configuration (FREE! - fast and good quality)
GROQ_API_KEY=your_groq_api_key_here

# Hugging Face Configuration (COMPLETELY FREE - runs locally)
# No API key needed, but requires more computing power

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# File Storage Configuration
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx,txt

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds
AUTO_CLEANUP=True
CLEANUP_INTERVAL=24  # hours

# AI Model Configuration
DEFAULT_MODEL=gpt-4
MAX_TOKENS=4000
TEMPERATURE=0.3

# Resume Generation Settings
DEFAULT_STYLE=modern
SUPPORTED_STYLES=modern,classic,minimal

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=smartresume.log

# Security (for production)
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=*  # In production, specify allowed origins